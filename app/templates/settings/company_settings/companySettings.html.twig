{% extends '@AdminLTE/layout/default-layout.html.twig' %}

{% block title %}Configurations -- General Settings{% endblock %}

{% block page_title %}Configurations{% endblock %}
{% block page_subtitle %}General Settings{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-md-3">
            {% set setting_subMenuItem = 'general' %}
            {% include 'settings/settings_submenu/settings-menu.html.twig' %}
        </div>
        <div class="col-md-9">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <i class="fa fa-fw fa-gears"></i> Company's settings
                </div>
                <div class="panel-body">
                    <form class="form-horizontal">
                        <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Company's Name</label>
                                <div class="col-sm-10">
                                    <input disabled type="text" class="form-control" value="{{ app.user.company.name }}">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Currency</label>
                                <div class="col-sm-10">
                                    <input type="text" disabled class="form-control" value="{{ app.user.company.currency }}">
                                </div>
                            </div>
                        </div>

                        <div class="box-footer">
                            <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#companySettingsEdit">Edit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>



    <!-- Modal -->
    <div class="modal fade" id="companySettingsEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Company's settings</h4>
                </div>
                <div class="modal-body">

                    <form class="form-horizontal">
                        <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Company's Name</label>
                                <div class="col-sm-10">
                                    <input type="text" name="companyName" id="companyName" class="form-control" value="{{ app.user.company.name }}">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Currency</label>
                                <div class="col-sm-10">
                                    <input type="text" name="companyCurrency" id="companyCurrency" class="form-control" value="{{ app.user.company.currency }}">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" onclick="saveCompanySettingsChanges()" class="btn btn-success">Save changes</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/settings/companySettings.js') }}"></script>
{% endblock %}