{% extends '@AdminLTE/layout/default-layout.html.twig' %}

{% block title %}Achat - Commande Fournissuer{% endblock %}
{% block page_title %} Achat {% endblock %}
{% block page_subtitle %} Commande Fournissuer{% endblock %}

{% block page_content %}
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="text-right text-bold">Supplier Order</h2>
                    <hr>
                </div>
            </div>

            <div class="row">
                <div class="col-md-offset-0 col-md-5">
                    <div class="row section">
                        <label class="text-blue col-sm-2">Supplier</label>
                        <div class="col-sm-10">
                            <a href="#" onclick="selectSupplier()" data-toggle="modal" data-target="#dialog">
                                <span class="pull-right text-info btn-link">Edit</span>
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <label for="">Company: </label>
                        </div>
                        <div class="col-sm-8">
                            <label id="supplier-name"> </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <label for="">Tax identification number</label>
                        </div>
                        <div class="col-sm-8">
                            <label id="supplier-tax-number"> </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <label for="">Email</label>
                        </div>
                        <div class="col-sm-8">
                            <label id="supplier-email"> </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <label for="">Phone</label>
                        </div>
                        <div class="col-sm-8">
                            <label id="supplier-phone"> </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <label for="">Fax</label>
                        </div>
                        <div class="col-sm-8">
                            <label id="supplier-fax"> </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <label for="">Address</label>
                        </div>
                        <div class="col-sm-8">
                            <label id="supplier-address"> </label>
                        </div>
                    </div>
                </div>
                <div class="col-md-offset-1 col-md-5" >
                    <div class="row section">
                        <label class="text-blue">Document details</label>
                    </div>
                    <div>
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="">External reference:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="">Document date:</label>
                                <div class="col-sm-10">
                                    <input type="date" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2 pull-left" for="">Delivery date:</label>
                                <div class="col-sm-10">
                                    <input type="date" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="">Note:</label>
                                <div class="col-sm-10">
                                    <textarea name="" id="" class="form-control"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="dialog" tabindex="-1" role="dialog"></div>
{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    <style>
        .section {
            border-bottom: 1px solid #0a568c;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }
    </style>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/supplier-order-management/new.js') }}"></script>
{% endblock %}