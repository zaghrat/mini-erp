{% extends '@AdminLTE/layout/default-layout.html.twig' %}

{% block title %}Clients Management{% endblock %}

{% block page_title %} List of clients {% endblock %}
{% block page_subtitle %} {% endblock %}

{% block page_content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <button type="button" class="pull-right btn bg-olive margin" id="addNewItemBtn" data-toggle="modal" data-target="#dialog">ADD</button>
            </div>
        </div>
        <div class="panel-body">
            <table class="table table-bordered table-hover dataTable">
                <thead>
                <tr>
                    <th class="text-center">NAME</th>
                    <th class="text-center">EMAIL</th>
                    <th class="text-center">PHONE</th>
                    <th class="text-center">FAX</th>
                    <th class="text-center">ACTIONS</th>
                </thead>
                <tbody>
                    {% for client in clients %}
                        <tr>
                            <td>{{ client.name }}</td>
                            <td>{{ client.email }}</td>
                            <td>{{ client.phone }}</td>
                            <td>{{ client.fax }}</td>
                            <td class="text-center">
                                <button class="btn btn-warning" id="edit-item" onclick="editItem({{ client.id }})" data-toggle="modal" data-target="#dialog">
                                    <i class="fa fa-pencil"></i>
                                </button>
                                <button class="btn btn-danger" onclick="deleteItemConfirmation({{ client.id }})" data-toggle="modal" data-target="#dialog">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


    <div class="modal fade" id="dialog" tabindex="-1" role="dialog"></div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/client-management.js') }}"></script>
{% endblock %}